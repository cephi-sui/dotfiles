set termguicolors
colorscheme catppuccin_mocha

syntax on
set number
set incsearch
set hlsearch

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

set colorcolumn=81

let g:BASH_Ctrl_h = 'off'
let g:BASH_Ctrl_j = 'off'
let g:BASH_Ctrl_k = 'off'
let g:BASH_Ctrl_l = 'off'

noremap <c-;> <c-d>
